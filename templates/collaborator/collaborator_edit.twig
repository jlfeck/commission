{% extends "panel.twig" %}

{% block panel %}

<h2 class="page-header">Colaboradores</h2>

	{% if error is not empty %}
    	<div class="alert alert-warning alert-dismissible" role="alert">
    	  <button type="button" class="close" data-dismiss="alert">
    	  	<span aria-hidden="true">&times;</span>
    	  	<span class="sr-only">Close</span>
    	  </button>
    	  {{ error }}
    	</div>
	{% endif %}
	<form method="POST" action="{{ baseUrl() }}/collaborator/edit/{{ collaborator.id }}" class="form-horizontal" role="form">
	  <input type="hidden" name="_METHOD" value="PUT"/>
	  <input type="hidden" name="id" value="{{ collaborator.id }}"/>

	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">Nome</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="name" placeholder="Nome" value="{{ collaborator.name }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">RG</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="rg" placeholder="RG" value="{{ collaborator.rg }}">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">CPF</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="cpf" placeholder="CPF" value="{{ collaborator.cpf }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">CTPS</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="ctps" placeholder="CTPS" value="{{ collaborator.ctps }}">
	    </div>
	  </div>

	  <div class="form-group"></div>
	  <div class="form-group"></div>

	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">Telefone</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="phone" placeholder="Telefone" value="{{ collaborator.phone }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">E-mail</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="email" placeholder="E-mail" value="{{ collaborator.email }}">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">CEP</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="zip" placeholder="CEP" value="{{ collaborator.zip }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">Endereço</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="address" placeholder="Endereço" value="{{ collaborator.address }}">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">Bairro</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="district" placeholder="Bairro" value="{{ collaborator.district }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">Cidade</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="city" placeholder="Cidade" value="{{ collaborator.city }}">
	    </div>
	  </div>

	  <div class="form-group"></div>
	  <div class="form-group"></div>

	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">Admissão</label>
	    <div class="col-sm-4 calendar-svcd">
	      <input type="text" class="form-control" name="date_start" placeholder="00/00/0000" value="{{ collaborator.date_start }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">Demissão</label>
	    <div class="col-sm-4 calendar-svcd">
	      <input type="text" class="form-control" name="date_finish" placeholder="00/00/0000" value="{{ collaborator.date_finish }}">
	    </div>
	  </div>
	  <div class="form-group">
	  	<label for="" class="col-sm-2 control-label">Salário R$</label>
	  	<div class="col-sm-9">
	  	  <input type="text" class="form-control" name="salary" placeholder="0000.00" value="{{ collaborator.salary }}">
	  	</div>
	  </div>
	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">Observação</label>
	    <div class="col-sm-9">
	    	<textarea class="form-control" name="observation" placeholder="Observação" rows="5">{{ collaborator.observation }}</textarea>
	    </div>
	  </div>
	  
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-5">
	      <button type="submit" class="btn btn-default">Salvar</button>
	    </div>
	  </div>

	</form>

{% endblock %}