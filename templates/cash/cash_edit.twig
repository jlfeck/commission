{% extends "panel.twig" %}

{% block panel %}

<h2 class="page-header">Colaboradores</h2>

	{% if error is not empty %}
    	<div class="alert alert-warning alert-dismissible" role="alert">
    	  <button type="button" class="close" data-dismiss="alert">
    	  	<span aria-hidden="true">&times;</span>
    	  	<span class="sr-only">Close</span>
    	  </button>
    	  {{ error }}
    	</div>
	{% endif %}
	<form method="POST" action="{{ baseUrl() }}/cash/edit/{{ cash.id }}" class="form-horizontal" role="form">
	  <input type="hidden" name="_METHOD" value="PUT"/>
	  <input type="hidden" name="id" value="{{ cash.id }}"/>

	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">Nome</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="name" placeholder="Nome" value="{{ cash.name }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">RG</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="rg" placeholder="RG" value="{{ cash.rg }}">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">CPF</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="cpf" placeholder="CPF" value="{{ cash.cpf }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">CTPS</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="ctps" placeholder="CTPS" value="{{ cash.ctps }}">
	    </div>
	  </div>

	  <div class="form-group"></div>
	  <div class="form-group"></div>

	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">Telefone</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="phone" placeholder="Telefone" value="{{ cash.phone }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">E-mail</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="email" placeholder="E-mail" value="{{ cash.email }}">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">CEP</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="zip" placeholder="CEP" value="{{ cash.zip }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">Endereço</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="address" placeholder="Endereço" value="{{ cash.address }}">
	    </div>
	  </div>
	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">Bairro</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="district" placeholder="Bairro" value="{{ cash.district }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">Cidade</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="city" placeholder="Cidade" value="{{ cash.city }}">
	    </div>
	  </div>

	  <div class="form-group"></div>
	  <div class="form-group"></div>

	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">Admissão</label>
	    <div class="col-sm-4 calendar-svcd">
	      <input type="text" class="form-control" name="date" placeholder="00/00/0000" value="{{ cash.date }}">
	    </div>
	    <label for="" class="col-sm-1 control-label">Total</label>
	    <div class="col-sm-4">
	      <input type="text" class="form-control" name="total" value="{{ cash.total }}">
	    </div>
	  </div>
	  <div class="form-group">
	  	<label for="" class="col-sm-2 control-label">Salário R$</label>
	  	<div class="col-sm-9">
	  	  <input type="text" class="form-control" name="salary" placeholder="0000.00" value="{{ cash.salary }}">
	  	</div>
	  </div>
	  <div class="form-group">
	    <label for="" class="col-sm-2 control-label">Observação</label>
	    <div class="col-sm-9">
	    	<textarea class="form-control" name="observation" placeholder="Observação" rows="5">{{ cash.observation }}</textarea>
	    </div>
	  </div>
	  
	  <div class="form-group">
	    <div class="col-sm-offset-2 col-sm-5">
	      <button type="submit" class="btn btn-default">Salvar</button>
	    </div>
	  </div>

	</form>

{% endblock %}